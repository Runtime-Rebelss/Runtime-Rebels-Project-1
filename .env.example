# Example environment variables (do NOT commit real secrets)

# MongoDB connection string
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>

# JWT config
APPLICATION_SECURITY_JWT_SECRET_KEY=your_jwt_secret_here
APPLICATION_SECURITY_JWT_EXPIRATION=3600000
APPLICATION_SECURITY_JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Stripe (server-side secret)
STRIPE_SECRET_KEY=sk_test_...
# Stripe (client-side public key used by frontend; prefix VITE_ if used by Vite)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (example for Spring Mail)
MAIL_USERNAME=example@gmail.com
MAIL_PASSWORD=app-password-or-token
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# Other
# Add any additional environment variables required by the app here.

